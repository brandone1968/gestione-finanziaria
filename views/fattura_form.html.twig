{% extends "layout.html.twig" %}

{% block title %}Nuova fattura{% endblock %}

{% block content %}
    <p>
        <br>
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

    <h2 class="text-center">{{ block('title') }}</h2>
    {{ form_start(fatturaForm) }}
    <table id="tableDettaglioFattura" class="table table-bordered table-hover">
        <tr>
            <td>    
                {# form_row visualizza l'etichetta (label) #} 
                {# form_widget visualizza il campo #} 
                {{ form_row(fatturaForm.ditta1)}}     
                {{ form_widget(fatturaForm.ditta1) }}
            </td>
            <td>
                {{ form_row(fatturaForm.ditta2)}}  
                {{ form_widget(fatturaForm.ditta2) }}
            </td>
        </tr>
    <br>
    <table id="tableFattura" class="table table-bordered table-hover">
        <tr>
            <td colspan="2" >
                {{ form_row(fatturaForm.numFattura)}}                   
                {{ form_widget(fatturaForm.numFattura)}}
            </td>
            <td colspan="2" >
                {{ form_row(fatturaForm.dataFattura)}}                   
                {{ form_widget(fatturaForm.dataFattura)}}
           </td>
        </tr>
    </table>
    
           <br>
    <table id="tableFattura" class="table table-bordered table-hover">
        <tr>
            <td colspan="4" >
                {{ form_row(fatturaForm.descrizione)}} 
                {{ form_widget(fatturaForm.descrizione)}}
            </td>
        </tr>
    </table>

    <table id="tableFattura" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">Descrizione dettaglio</th>
                <th class="text-center">Quantit√†</th>
                <th class="text-center">Importo</th>
                <th class="text-center">Totale</th>
             </tr>
        </thead>
 
        
        <tr>
            <td colspan="3" class="text-right">Imponibile</td><td></td>
            </tr><tr>
            <td colspan="3" class="text-right">IVA %</td><td></td>
            </tr><tr>
            <td colspan="3" class="text-right">Totale fattura</td><td></td>
        </tr>

    </table>
        
    <br>
    <table id="tableNoteFattura" class="table table-bordered">
        <tr>
            <td colspan="2"><strong>Note: </strong></td>
        </tr>
    </table>
</p>

        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-2">
                <input type="submit" class="btn btn-primary btn-block" value="Save" />
            </div>
        </div>
        {{ form_end(fatturaForm) }}

    
    </table>

{% endblock %}